@model Bookstore.Models.Book

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Book Details</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1>Book Details</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text"><strong>Author:</strong> @Model.Author</p>
                <p class="card-text"><strong>Price:</strong> @Model.Price</p>
                <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
            </div>
        </div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Back to Home</a>
    </div>
</body>
</html>
